algoritmo "sucessor"
var
   // Declarar a variável para armazenar o número
   numero, sucessor:inteiro
inicio
   // Ler o número inteiro
   escreva("Digite um número inteiro: ")
   leia(numero)


   // Calcular o sucessor
   sucessor <- numero + 1


   // Exibir o sucessor
   escreva("O sucessor de ", numero, " é ", sucessor)
fimalgoritmo